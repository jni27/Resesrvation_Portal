<%- include("partials/header") %> 

<h1 style = "text-align: center;">Reservation Page</h1>

    <div class ="jumbotron">
        <div class = "container">
            <div class="row">
                <div class="col-4"></div>
                <div class= "col-auto">
                    <a class="btn btn-primary btn-lg" href= "/reservation/new">Create a New Reservation</a>
                </div> 
                <div class="col-4"></div>
            </div>
        </div>
    </div>

    <div class="row text-center">
        <% customers.forEach(function(customer){ %>
            <div class= "col-md-3 col-sm-6">
                <div class= "thumbnail">
                    <h3>Name: <strong><%= customer.name %></strong></h3>
                    <p><strong>Portal: <%= customer.portal %></strong></p>
                    <p>
                        <a href="/reservation/<%=customer._id%>" class="btn btn-md btn-info">Detail</a>
                    </p>
                </div>
            </div>      
      <% }); %>
    </div>

<%- include("partials/footer") %> 